package stp.arrays.matran8huong_tuanlecongdan;

import java.io.FileInputStream;
import java.util.Scanner;

import stp.utils.MyUtils;

public class Solution {
	
	static int row, col;
	static char[][] arr;
	static int count;
	static int xResult, yResult;
	static int result;

	// 0-1 -1-1 -10 -11 01 11 10 1-1
	static int[] dx = { 0, -1, -1, -1, 0, 1, 1, 1 };
	static int[] dy = { -1, -1, 0, 1, 1, 1, 0, -1 };

	public static void main(String[] args) {
		try {
			System.setIn(new FileInputStream(MyUtils.getAbsolutePath("arrays\\matran8huong_tuanlecongdan")));
			Scanner s = new Scanner(System.in);
			
			row = s.nextInt();
			col = s.nextInt();
			arr = new char[row][col];
			
			count = 0;
			xResult = -1;
			yResult = -1;
			result = 0;

			// input
			for (int i = 0; i < row; i++) {
				String str = s.next();
				for (int j = 0; j < col; j++) {
					arr[i][j] = str.charAt(j);
				}
			}

			// solve
			// >>> chọn chỗ cho Tý
			for (int i = 0; i < row; i++) {
				for (int j = 0; j < col; j++) {
					if (arr[i][j] == '.') {
						if (count < check(i, j)) {
							count = check(i, j);
							xResult = i;
							yResult = j;
						}
					}
				}
			}
			
			// >>> Tý ngồi vào chỗ
			if (xResult != -1 && yResult != -1) {
				arr[xResult][yResult] = 'o'; 
			}
			
			// >>> đếm số lần bắt tay
			for (int i = 0; i < row; i++) {
				for (int j = 0; j < col; j++) {
					if (arr[i][j] == 'o') {
						result += check(i, j);
					}
				}
			}
			
			// >>> vì lặp mỗi vị trí 2 lần nên phải chia tay
			result /= 2; 
			
			System.out.println(result);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

	private static int check(int x, int j) {
		int ti = 0, tj = 0;
		int count = 0;
		
		for (int k = 0; k < dx.length; k++) {
			ti = x + dx[k];
			tj = j + dy[k];
			
			if (ti < 0 || ti >= row || tj < 0 || tj >= col) {
				continue;
			}
			
			if (arr[ti][tj] == 'o') {
				count++;
			}
		}
		
		return count;
	}
}
